@using Planner.Business.Dtos
@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/treant-js-master/Treant.css" rel="stylesheet" type="text/css" />
<style type="text/css">

    /* optional Container STYLES */
    .chart {
        height: 159px;
        width: 332px;
        margin: 5px;
        margin: 5px auto;
        border: 3px solid #DDD;
        border-radius: 3px;
    }

    .node {
        color: #9CB5ED;
        border: 2px solid #C8C8C8;
        border-radius: 3px;
    }

        .node p {
            font-size: 20px;
            line-height: 20px;
            height: 20px;
            font-weight: bold;
            padding: 3px;
            margin: 0;
        }
</style>

@section Scripts {
    <script src="~/Content/treant-js-master/vendor/raphael.js"></script>
    <script src="~/Content/treant-js-master/Treant.js"></script>
    <script type="text/javascript">
        var subjects = JSON.parse('@Html.Raw(ViewBag.Subjects)');
        simple_chart_config = {
            chart: {
                container: "#tree-simple"
            },

            nodeStructure: {
                text: { name: "Subjects" },
                children: subjects
            }
        };
        var my_chart = new Treant(simple_chart_config);
    </script>

}
